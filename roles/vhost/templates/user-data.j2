#cloud-config
password: {{ atomic_host_password }}
ssh_pwauth: False
chpasswd:
  expire: False

ssh_authorized_keys:

runcmd:
  - atomic host upgrade
  - rpm-ostree install socat nfs-utils lsscsi iscsi-initiator-utils sg3_utils device-mapper-multipath

power_state:
  delay: now
  mode: reboot
  condition: True
